<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:background="@color/White"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_height="wrap_content">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="14dp"
                android:clickable="true"
                android:id="@+id/back"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_gravity="center|left"
                android:src="@drawable/ic_back"
                android:layout_width="44dp"
                android:layout_height="44dp"/>
                <TextView
                    android:layout_centerInParent="true"
                    android:textSize="23sp"
                    android:gravity="center"
                    android:layout_gravity="center|top"
                    android:textColor="@color/Black"
                    android:text="Дополнительно"
                    android:fontFamily="@raw/fontbold"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"/>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <View
            android:background="@color/GrayLight"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:layout_height="0.7dp"/>
        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="15dp"
                    android:text="Автор"
                    android:textColor="@color/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:background="@drawable/bg_selectable"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_margin="10dp"
                        android:id="@+id/name"
                        android:textColor="@color/Black"
                        android:textSize="16sp"
                        android:text="Матвей Правосудов"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="5dp"
                        android:src="@drawable/ic_arrow_bottom"
                        android:layout_marginRight="10dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="15dp"
                    android:text="Сбор завершиться"
                    android:textColor="@color/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RadioGroup
                    android:id="@+id/typed_collected"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/onSum"
                        android:textColor="@color/Black"
                        android:textSize="16sp"
                        android:text="Когда соберем сумму"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/onDate"
                        android:textColor="@color/Black"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"
                        android:text="В определенную дату"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RadioGroup>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/dateBlock"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="15dp"
                    android:text="Дата окончания"
                    android:textColor="@color/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:background="@drawable/bg_selectable"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/date"
                        android:clickable="true"
                        android:padding="10dp"
                        android:textColor="@color/Black"
                        android:textSize="16sp"
                        android:background="?selectableItemBackgroundBorderless"
                        android:text="12 ноября"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="5dp"
                        android:src="@drawable/ic_arrow_bottom"
                        android:layout_marginRight="10dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:background="@color/White"
        android:layout_height="68dp">
        <RelativeLayout
            android:layout_weight="1"
            android:id="@+id/buttonCreate"
            android:layout_margin="12dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:background="@drawable/bg_action_button"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <TextView
                android:background="?attr/selectableItemBackgroundBorderless"
                android:id="@+id/next"
                android:gravity="center"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/White"
                android:text="Создать сбор"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>
        </RelativeLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>